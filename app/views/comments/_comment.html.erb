<h5><%= post.comments.count %>件のコメント</h5>
<% post.comments.each do |comment| %>
  <div class="media border mb-3 ">
    <div class="col-3">
      <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
      <p class="pl-1"><%= comment.user.name %></p>
      <% if comment.user == current_user %>
        <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger mb-2" %>
      <% end %>
    </div>
    <div class="col-9">
      <div class="media-body p-3">
        <p class="pt-2"><%= comment.comment %></p>
        <div class="text-right">
          <%= comment.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
