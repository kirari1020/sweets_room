<h5><%= post.comments.count %>件のコメント</h5>
<% post.comments.each do |comment| %>
  <div class="media border mb-3">
    <div class="col-4">
      <%= attachment_image_tag comment.user, :profile_image, size: "80x80", fallback: "noimage.3.jpg", class:"mt-3 rounded-circle"; %>
      <p class="pl-1"><%= comment.user.name %></p>
      <% if comment.user == current_user %>
        <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger mb-2" %>
      <% end %>
    </div>
    <div class="col-8">
      <div class="media-body p-3">
        <p class="pt-2"><%=safe_join(comment.comment.split("\n"),tag(:br))%></p>
        <div class="text-right">
          <%= comment.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
