<h1 class="text-center pt-5">Edit Profile</h1>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-3">
      <div class="form-body p-4">
        <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user, local: true do |f| %>
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, class:"form-control mb-2", id:"inputName", placeholder:"名前をここに(20字以内)"%>
          <label for="inputName">Profile Image</label><br>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:" rounded-circle" %>
          <div class="input-group my-3">
            <label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>
            </label>
          </div>
          <label for="inputImage">Profile</label>
          <%= f.text_area :profile, placeholder: "プロフィールをここに(100字以内)", class:"form-control" %>
          <%= f.submit "Update", class:"btn btn-lg btn-block btn-outline-warning mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

