<%= render 'layouts/errors', obj: @user %>

<h2>Edit Profile</h2>

<%= form_with model:@user, local:true do |f| %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ここに(1字以上20字以内)"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">Profile Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputImage">Profile</label>
  <%= f.text_area :profile, placeholder: "プロフィールをここに(1字以上100字以内)" %>
  <%= f.submit "変更を保存" %>
<% end %>