<div class="profile-container">
  <h4 class="profile-name">Name：<%= @user.name %></h4>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  Profile：<%= @user.profile %>
  </br>
  <th>favorites</th>
  <th><%= link_to @user.favorites.count, post_favorites_path(@user) %></th>

  <th>follows</th>
  <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>

  <th>followers</th>
  <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>

  <% if @user.id == current_user.id %>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
  <% else %>
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info btn-sm" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-sm btn-success" %>
    <% end %>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image %>
  <% end %>
  <p>Profile Image:<%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>Title:<%= post.title %></p>
  <P>Contents:<%= post.body %></P>
  <P>Name:<%= post.user.name %></P>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  <p class="favorite_<%= post.id %>"><%= render 'favorites/favorite', post: post %></p>
</div>
<% end %>
<%= paginate @posts %>