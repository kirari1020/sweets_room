<div class="profile-container">
  <h4 class="profile-name">Name：<%= @user.name %></h4>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  Profile：<%= @user.profile %>
  
  <% if @user.id == current_user.id %>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image %>
  <% end %>
  <p>Profile Image:<%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>Title:<%= post.title %></p>
  <P>Contents:<%= post.body %></P>
  <P>Name:<%= post.user.name %></P>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  <p class="favorite_<%= post.id %>"><%= render 'favorites/favorite', post: post %></p>
</div>
<% end %>
<%= paginate @posts %>