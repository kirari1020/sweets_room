<% if obj.errors.any? %>
  <div id="error_explanation">
    <h3 class="text-danger"><i class="fas fa-exclamation-circle"></i> <%= pluralize(obj.errors.count, "件のエラーがあります") %><i class="fas fa-exclamation-circle"></i></h3>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>