<%= render 'layouts/errors', obj: @post %>

<h1>Edit Post</h1>

<%= form_with model: @post, local:true do |f| %>

  <h4>Image</h4>
  <%= f.attachment_field :image %>
  <h4>Title</h4>
  <%= f.text_field :title, placeholder: "タイトルやお店の名前など(20字以内)" %>
  <h4>Contents</h4>
  <%= f.text_area :body, placeholder: "ここに" %>
  <h4>Tag</h4>
  
  <%= f.submit "Update" %>
<% end %>