<div class="container">
  <div class="row">
<%= render 'layouts/errors', obj: @comment %>

  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= attachment_image_tag @post, :image %>
    <div class="card-body">
      <div class="row">
        <div class="col-sm-2 col-md-5">
          <%= attachment_image_tag @post.user, :profile_image, :fill, 90, 90, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-sm-10 col-md-7">
          <p class="card-title">
            <strong>Title:<%= @post.title %></strong>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <P>name:<%= @post.user.name %></P>
        </div>
      </div>
          <div class="row">
            <div class="col-12">
            Contents<P class="media-body border ml-1 p-3"><%= @post.body %></P>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
             <!--タグ表示欄-->
             Tags:<% @tag_list.each do |tag| %>
                    <span class="btn btn-secondary btn-sm rounded-pill" ><%= tag %></span>
                  <% end %>
            <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
            <% if @post.user == current_user %>
              <%= link_to "Edit", edit_post_path(@post),class: "btn btn-outline-info" %>
              <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
            <% end %>
            <!--お気に入りの部分テンプレート-->
            <p class="favorite_<%= @post.id %>"><%= render 'favorites/favorite', post: @post %></p>
          </div>
        </div>
        </div>
        <hr>

          <!--コメントの部分テンプレート-->
          <div class="comments card-text"><%= render 'comments/comment', post: @post %></div>

          <hr>
          <div class="new-comment card-text">
            <%= form_with(model:[@post,@comment], local: true) do |f| %>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">コメントする</label>
                  <%= f.text_area :comment, rows:'5',class: "form-control",placeholder: "コメントをここに(200字以内)" %>
              </div>
              <%= f.submit "To comment", class:"btn btn-lg btn-info mt-2 float-right" %>
            <% end %>
          </div>
    </div>
  </div>
</div>
</div>
