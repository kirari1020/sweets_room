<div class ="pt-5"></div>
<div class="container">
  <div class="row">
    <div id="comments_error"><%= render 'layouts/errors', obj: @comment %></div>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= attachment_image_tag @post, :image %>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-2 col-md-3">
            <%= attachment_image_tag @post.user, :profile_image, :fill, 90, 90, fallback: "noimage.3.jpg", class:"mt-3 rounded-circle"; %>
            <div class="row">
              <P class="pl-4"><%= @post.user.name %></P>
            </div>
          </div>
          <div class="col-sm-10 col-md-9">
            <p class="card-title">
              <strong><%= @post.title %></strong>
            </p>
            <!--お気に入りの部分テンプレート-->
            <div>
              <td class="favorite_<%= @post.id %>"><%= render 'favorites/favorite', post: @post %></td>
              <td class="comments-count">コメント <%= @post.comments.count %></td>
              <% if @post.user == current_user %>
                <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger float-right ml-3" %>
                <%= link_to "Edit", edit_post_path(@post),class: "btn btn-sm btn-info float-right" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-12">
          Contents<P class="media-body border ml-1 p-3"><%= @post.body %></P>
        </div>
        <div class="col-12">
          <!--タグ表示欄-->
          Tags：<% @tag_list.each do |tag| %>
                  <span class="btn btn-secondary btn-sm rounded-pill" ><%= tag %></span>
                <% end %>
          <p class="text-right"><%= @post.created_at.strftime('%Y/%m/%d') %></p>
        </div>
        <hr>
      </div>
      <!--コメントの部分テンプレート-->
      <div class="comments card-text px-4"><%= render 'comments/comment', post: @post %></div>
      <div class="new-comment card-text px-4">
        <hr>
        <%= form_with model:[@post,@comment] do |f| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">コメントする</label>
            <%= f.text_area :comment, rows:'5',class: "form-control",placeholder: "コメントをここに(200字以内)" %>
          </div>
          <%= f.submit "To comment", class:"btn btn-md btn-info mb-3 mr-2 float-right " %>
        <% end %>
      </div>
    </div>
  </div>
</div>

