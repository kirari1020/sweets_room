<h1 class="text-center pt-5">New Post</h1>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-3">
      <div class="form-body p-4">
        <%= render 'layouts/errors', obj: @post %>
        <%= form_with model: @post, local:true do |f| %>
          <label for="inputImage">Image</label>
          <%= f.attachment_field :image, class: "w-100" %>
          <label for="inputImage">Title</label>
          <%= f.text_field :title, class:"form-control", placeholder:"タイトルや店名など(1字以上20字以内)" %>
          <label for="inputImage">Contents</label>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"ここに" %>
          <label for="inputImage">Tag</label>
          <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control", placeholder:"(例)cake,sweets,. . .※半角のカンマで区切る" %>
          <hr>
          <%= f.submit 'Create', class:"btn btn-lg btn-block btn-outline-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
